@model Brand
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-10 offset-2">
        <h2>Edit Brand</h2>
    </div>
</div>
<form asp-action="Edit" asp-controller="Brands" method="post">
    <input type="hidden" asp-for="BrandId" />
    <div class="form-group row mb-1">
        <label asp-for="BrandName" class="col-form-label col-2 text-end"></label>
        <div class="col-4">
            <input asp-for="BrandName" class="form-control" />
        </div>
        <div class="col-4">
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Country" class="col-form-label col-2 text-end"></label>
        <div class="col-4">
            <input asp-for="Country" class="form-control" />
        </div>
        <div class="col-4">
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">

        <div class="col-10 offset-2">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>
<div class="col-10 offset-2">
    <a class="btn btn-link px-0" asp-action="Index" asp-controller="Brands">Back to List </a>
</div>
@section scripts{
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>
    <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>
    <script>
        $.validator.addMethod("brand", function (value, element, params) {
            if (value != "Nokia" && value != "Samsung" &&
                value != "Xaomi" && value != "One Plus" &&
                value != "iPhone") {
                return false;
            }
            else {
                return true;
            }
        })
        $.validator.unobtrusive.adapters.addBool("brand");

    </script>
}



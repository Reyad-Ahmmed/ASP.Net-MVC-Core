@model Brand
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form asp-action="Delete" asp-controller="Brands" method="post">
    <input type="hidden" asp-for="BrandId" />
    <div class="form-group row mb-1">
        <div class="col-12">
            <span class="fw-bold">Brand Name : </span>@Model.BrandName
        </div>
    </div>
    <div class="form-group row mb-1">
        <div class="col-12">
            <span class="fw-bold">Country : </span>@Model.Country
        </div>
    </div>
    <div class="form-group row mb-1">
        @if (Model.Mobiles.Any())
        {
            <div class="col-12">
                <button type="submit" class="btn btn-danger" disabled>Delete</button>
            </div>
        }
        else
        {
            <div class="col-12">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        }

    </div>
</form>
<div class="col-12">
    <a class="btn btn-link px-0" asp-action="Index" asp-controller="Brands">Back to List </a>
</div>

